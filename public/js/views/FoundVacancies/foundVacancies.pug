- var i = number_of_vacancies % 10

if i == 1 && i != 11
    - var s = `Найдена`
    - var v = `вакансия`
else if (i == 2 || i == 3 || i == 4) && ( i != 12 && i != 13 && i != 14)
    - var s = `Найдено`
    - var v = `вакансии`
else
    - var s = `Найдено`
    - var v = `вакансий`

div.found-vacancies
    div.found-vacancies__wrapper
        div.found-vacancies__top-row
            h1.title-h1 #{s} #{number_of_vacancies} #{v}
            a.button.found-vacancies__button(href='/search/company') Поиск компаний
            a.button.found-vacancies__button(href='/search/vacancy') Расширенный поиск
        div.list
